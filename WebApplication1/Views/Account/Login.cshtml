@using WebApplication1.Utilities.Enums;
@using WebApplication1.ViewModels.Account;
@model LoginVM
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 pt-5 pt-lg-0">
                    <form method="Login">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="UsernameOrEmail">UsernameOrEmail</label>
                                    <input asp-for="UsernameOrEmail" placeholder="UsernameOrEmail" />
                                    <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12" d-flex flex-row >
                                    <label asp-for="IsRemembered">Remember me</label>
                                    <input asp-for="IsRemembered" placeholder="Remember me" />
                                    <span class="text-danger" asp-validation-for="IsRemembered"></span>
                                </div>
                                
                               
                               
                                <div class="col-12">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->